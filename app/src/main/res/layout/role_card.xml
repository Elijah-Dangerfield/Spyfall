<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="25dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/role_card_parent"
            android:background="@color/colorTextBackground">

        <TextView
                android:text="Role: The Spy!"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_game_role" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" android:textStyle="bold" android:textSize="24sp"
                android:textColor="@color/colorBlack" android:gravity="center"/>
        <TextView
                android:text="Figure out the location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_game_location" app:layout_constraintStart_toStartOf="@+id/tv_game_role"
                app:layout_constraintEnd_toEndOf="@+id/tv_game_role" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_game_role"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                android:gravity="center"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
