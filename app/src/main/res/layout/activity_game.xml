<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_timer" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="84dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="36sp" tools:text="10:00"/>
    <TextView
            android:text="Players:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_players" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_timer" app:layout_constraintHorizontal_bias="0.223"
            android:textSize="18sp"/>
    <TableLayout
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_players" app:layout_constraintStart_toStartOf="@+id/tv_players"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.0" android:id="@+id/tbl_players">


    </TableLayout>
    <TextView
            android:text="Locations:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" app:layout_constraintStart_toStartOf="@+id/tbl_players"
            app:layout_constraintTop_toBottomOf="@+id/tbl_players" android:layout_marginTop="32dp"
            android:textSize="18sp"/>

    <TableLayout
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/tbl_locations"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
    >


    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>