<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp"
            tools:context=".GameActivity">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_game_timer" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:layout_marginTop="84dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="36sp" tools:text="10:00"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_game_role" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_game_timer" app:layout_constraintStart_toStartOf="@+id/tv_game_timer"
                app:layout_constraintEnd_toEndOf="@+id/tv_game_timer" app:layout_constraintHorizontal_bias="0.511"
                tools:text="You are the Spy!" android:textStyle="bold" android:textSize="24sp"/>
        <TextView
                android:text="Players:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_players" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.114"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_game_location"/>
        <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_players"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="32dp" android:id="@+id/tbl_players"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp">


        </TableLayout>
        <TextView
                android:text="Locations:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/tbl_players" android:layout_marginTop="48dp"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/tv_players"/>

        <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/tbl_locations"
                android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp">


        </TableLayout>
        <Button
                android:text="End Game"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/btn_end_game"
                app:layout_constraintTop_toBottomOf="@+id/tbl_locations" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="40dp"
                app:layout_constraintHorizontal_bias="0.498" android:background="@drawable/background_action_button"
                android:onClick="endGame"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_game_location" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_game_role" app:layout_constraintStart_toStartOf="@+id/tv_game_role"
                app:layout_constraintEnd_toEndOf="@+id/tv_game_role" tools:text="at the office"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>