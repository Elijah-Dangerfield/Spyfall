<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".NewGameActivity"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="150dp">

    <View
            android:layout_width="313dp"
            android:layout_height="2dp"
            android:id="@+id/lineView5"
            app:layout_constraintEnd_toEndOf="@+id/lineView6" android:background="@android:color/darker_gray"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/lineView6"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/tv_time"
            android:layout_marginTop="24dp"/>
    <View
            android:layout_width="313dp"
            android:layout_height="2dp"
            android:id="@+id/lineView6"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="@+id/textView2"
            android:layout_marginTop="12dp" app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:text="@string/string_welcome"
            android:layout_marginTop="48dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginLeft="4dp" android:layout_marginStart="4dp"/>
    <EditText
            android:layout_width="309dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tv_player_name"
            android:hint="Name" android:background="@drawable/background_action_button" android:paddingLeft="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="@+id/lineView6"
            app:layout_constraintStart_toStartOf="@+id/guideline"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_locations"
            android:text="@string/string_loactions"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_player_name" app:layout_constraintStart_toStartOf="@+id/guideline"
    />
    <CheckBox
            android:text="Pack 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_locations"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <CheckBox
            android:text="Pack 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox" app:layout_constraintStart_toStartOf="@+id/checkBox"
    />
    <CheckBox
            android:text="Pack 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox2" app:layout_constraintStart_toStartOf="@+id/checkBox2"
    />
    <CheckBox
            android:text="Pack 4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox3" app:layout_constraintStart_toStartOf="@+id/checkBox3"
    />
    <TextView
            android:text="@string/string_load_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox4" android:textSize="18sp"/>
    <TextView
            android:text="@string/string_create_pack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="@+id/textView4" android:textSize="18sp"/>
    <TextView
            android:text="Time (in minuets)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginLeft="4dp" android:layout_marginStart="4dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:textSize="18sp"/>
    <EditText
            android:layout_width="54dp"
            android:layout_height="52dp"
            android:ems="10"
            android:id="@+id/tv_time"
            android:inputType="number" android:background="@drawable/background_action_button"
            app:layout_constraintStart_toEndOf="@+id/textView5" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView5" app:layout_constraintBottom_toBottomOf="@+id/textView5"
            android:paddingLeft="8dp"/>
    <Button
            android:text="Create"
            android:layout_width="150dp"
            android:layout_height="46dp"
            android:id="@+id/btn_create"
            android:background="@drawable/background_action_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lineView5" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.457" android:onClick="onCreateClick"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline" app:layout_constraintGuide_begin="37dp"
                                                android:orientation="vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>