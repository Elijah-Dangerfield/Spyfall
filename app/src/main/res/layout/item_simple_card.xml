<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        android:layout_margin="0dp"
        android:layout_height="66dp"
        android:id="@+id/cv_simple" app:cardBackgroundColor="@color/colorBackgroundLight">
    <androidx.cardview.widget.CardView android:layout_width="0dp"
                                       android:layout_height="0dp"
                                       android:background="@color/colorTextBackground"
                                       android:id="@+id/card_View" android:layout_marginTop="8dp"
                                       android:layout_marginBottom="8dp"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintTop_toTopOf="parent"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintBottom_toBottomOf="parent"
                                       android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                                       app:cardCornerRadius="9dp" app:cardElevation="0dp" app:cardMaxElevation="0dp"
                                       app:cardBackgroundColor="@color/colorTextBackground">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_simple_card_text"
                android:textColor="@android:color/secondary_text_light"
                android:gravity="center" android:ellipsize="end"
                android:singleLine="false" android:maxLines="2"
                android:layout_gravity="center"/>


    </androidx.cardview.widget.CardView>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" android:id="@+id/ic_first"
            android:background="@drawable/circle" android:backgroundTint="#00DB0C0C"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="5dp" android:layout_marginEnd="7dp">
    </ImageView>
    <TextView
            android:text="1st"
            android:id="@+id/tv_first"
            android:textColor="@color/colorWhite"
            android:textSize="8sp" android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/ic_first"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/ic_first"
            app:layout_constraintStart_toStartOf="@+id/ic_first"
            app:layout_constraintBottom_toBottomOf="@+id/ic_first"/>


</androidx.constraintlayout.widget.ConstraintLayout>

