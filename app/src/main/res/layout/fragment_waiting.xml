<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".WaitingActivity.WaitingGame">


        <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:id="@+id/lineView5"
                app:layout_constraintEnd_toEndOf="@+id/lineView6" android:background="@android:color/darker_gray"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="@+id/lineView6"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/rv_player_list_waiting"/>
        <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:id="@+id/lineView6"
                android:background="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="@+id/textView2"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textView6"
                android:layout_marginTop="12dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_marginTop="52dp" app:layout_constraintTop_toTopOf="parent"
                android:textSize="36sp"
                android:text="@string/string_waiting"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"/>
        <Button
                android:text="Start Game"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_start_game"
                app:layout_constraintTop_toBottomOf="@+id/lineView5" android:layout_marginTop="24dp"
                android:background="@drawable/background_action_button"
                app:layout_constraintStart_toStartOf="@+id/lineView5"
                android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_leave_game" app:layout_constraintStart_toEndOf="@+id/btn_start_game"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_start_game"
                app:layout_constraintEnd_toEndOf="@+id/lineView5"
                android:background="@drawable/background_action_button" android:text="Leave Game"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/rv_player_list_waiting" app:layout_constraintTop_toBottomOf="@+id/lineView6"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="@+id/lineView6"
                app:layout_constraintStart_toStartOf="@+id/lineView6" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toTopOf="@+id/lineView5"/>
        <TextView
                android:text="Access code:"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/textView6" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:textSize="14sp" app:layout_constraintStart_toStartOf="@+id/textView2"
                android:layout_marginLeft="76dp" android:layout_marginStart="76dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_acess_code"
                app:layout_constraintTop_toTopOf="@+id/textView6" app:layout_constraintBottom_toBottomOf="@+id/textView6"
                tools:text="Gws6fw" android:textColor="@android:color/black" android:textStyle="bold"
                android:textSize="14sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/textView2"
                android:layout_marginRight="8dp"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintHorizontal_bias="0.08"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>