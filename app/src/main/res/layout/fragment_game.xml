<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp"
            tools:context=".GameActivity" android:id="@+id/game_layout">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_game_timer" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:layout_marginTop="84dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="36sp" tools:text="10:00"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_game_role" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_game_timer"
                app:layout_constraintStart_toStartOf="@+id/tv_game_timer"
                app:layout_constraintEnd_toEndOf="@+id/tv_game_timer" app:layout_constraintHorizontal_bias="0.511"
                tools:text="You are the Spy!" android:textStyle="bold" android:textSize="24sp"/>
        <TextView
                android:text="Players:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_players" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.114"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_game_location"/>
        <TextView
                android:text="Locations:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/tv_players" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/rv_players"/>

        <Button
                android:text="End Game"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/btn_end_game"
                android:background="@drawable/background_action_button"
                android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/rv_locations"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        <Button
                android:text="Play Again"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/btn_play_again"
                android:background="@drawable/background_action_button"
                app:layout_constraintTop_toTopOf="@+id/btn_end_game"
                android:visibility="gone" android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="@+id/view_center" android:layout_marginLeft="16dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_game_location" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_game_role"
                app:layout_constraintStart_toStartOf="@+id/tv_game_role"
                app:layout_constraintEnd_toEndOf="@+id/tv_game_role" tools:text="at the office"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_players"
                android:id="@+id/rv_players"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="395dp"
                android:layout_height="wrap_content" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView7" android:id="@+id/rv_locations"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.5"
                android:id="@+id/view_center"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>