<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/join_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".JoinGameActivity"
        android:clickable="true"
        android:focusableInTouchMode="true" android:background="@color/colorBackgroundLight">

    <Button
            android:text="Join"
            android:layout_width="150dp"
            android:layout_height="46dp"
            android:id="@+id/btn_join_game_action"
            android:background="@drawable/background_ripple_button"
            app:layout_constraintTop_toBottomOf="@+id/lineView2"
            app:layout_constraintStart_toStartOf="@+id/lineView2" app:layout_constraintEnd_toEndOf="@+id/lineView2"
            android:layout_marginTop="16dp" android:onClick="joinGameClick"
            android:textColor="@android:color/secondary_text_light"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:text="@string/string_welcome"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="144dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="36sp"/>
    <View
            android:layout_width="313dp"
            android:layout_height="2dp"
            android:id="@+id/lineView" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="@+id/textView" android:background="@android:color/darker_gray"/>
    <View
            android:layout_width="313dp"
            android:layout_height="2dp"
            android:id="@+id/lineView2"
            app:layout_constraintStart_toStartOf="@+id/lineView"
            app:layout_constraintEnd_toEndOf="@+id/lineView" android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/tv_username"
            android:layout_marginTop="24dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tv_access_code" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/lineView"
            app:layout_constraintStart_toStartOf="@+id/lineView" app:layout_constraintEnd_toEndOf="@+id/lineView"
            android:hint="@string/string_join_access_hint" android:background="@drawable/back_ground_edit_text"
            android:paddingLeft="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tv_username" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_access_code"
            app:layout_constraintStart_toStartOf="@+id/tv_access_code"
            app:layout_constraintEnd_toEndOf="@+id/tv_access_code" android:hint="@string/string_join_name_hint"
            android:background="@drawable/back_ground_edit_text" app:layout_constraintHorizontal_bias="0.0"
            android:paddingLeft="8dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pb_join_game" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_join_game_action"
            app:layout_constraintStart_toStartOf="@+id/btn_join_game_action"
            app:layout_constraintEnd_toEndOf="@+id/btn_join_game_action" android:visibility="invisible"/>


</androidx.constraintlayout.widget.ConstraintLayout>