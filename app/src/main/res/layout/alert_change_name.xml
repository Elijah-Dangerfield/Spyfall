<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@color/colorBackgroundLight">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tv_alert_change_name" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/tv_alert_change_name_title"
            app:layout_constraintEnd_toEndOf="@+id/tv_alert_change_name_title"
            android:layout_marginTop="16dp"
            android:hint="@string/string_change_name_hint"
            app:layout_constraintHorizontal_bias="0.549" app:layout_constraintTop_toBottomOf="@+id/tv_alert_change_name_title"
            android:background="@drawable/back_ground_edit_text" android:paddingLeft="8dp"/>
    <Button
            android:text="@android:string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_alert_change_name_canel"
            app:layout_constraintStart_toStartOf="@+id/tv_alert_change_name"
            app:layout_constraintTop_toTopOf="@+id/btn_change_name_alert_okay"
            android:background="@drawable/background_button_white"
            android:textColor="@android:color/black" android:textAllCaps="false"/>
    <Button
            android:text="Okay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_change_name_alert_okay" app:layout_constraintEnd_toEndOf="@+id/tv_alert_change_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_alert_change_name" android:layout_marginTop="24dp"
            android:background="@drawable/background_button_accent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp" app:layout_constraintVertical_bias="1.0"
            android:textColor="@color/colorWhite" android:textAllCaps="false"/>
    <TextView
            android:text="Change Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_alert_change_name_title"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textSize="24sp" android:textColor="@android:color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>