<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".settings.SettingsFragment" android:id="@+id/frameLayout">

    <TextView
            android:text="Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textColor="@android:color/black"
            android:textStyle="bold" android:textSize="36sp"
            android:layout_marginStart="42dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="42dp">

    </TextView>
    <ImageView
            android:src="@drawable/ic_theme_change"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/btn_theme_change"
            app:layout_constraintTop_toTopOf="@+id/btn_theme_change"
            app:layout_constraintBottom_toBottomOf="@+id/btn_theme_change"/>
    <TextView
            android:text="Theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            app:layout_constraintBottom_toBottomOf="@+id/imageView" app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="16dp"
            android:textStyle="bold" android:textColor="@color/colorBlack"/>
    <Button
            android:layout_width="102dp"
            android:layout_height="52dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:id="@+id/btn_theme_change"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"/>
    <Button
            android:layout_width="102dp"
            android:layout_height="52dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:id="@+id/btn_about"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/btn_theme_change" android:layout_marginTop="8dp"/>
    <Button
            android:layout_width="102dp"
            android:layout_height="52dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:id="@+id/btn_ads"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_about"/>
    <ImageView
            android:src="@drawable/ic_rules"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/ic_about" app:layout_constraintStart_toStartOf="@+id/btn_about"
            app:layout_constraintTop_toTopOf="@+id/btn_about"
            app:layout_constraintBottom_toBottomOf="@+id/btn_about" android:backgroundTint="#3959D5"/>
    <TextView
            android:text="About"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            app:layout_constraintTop_toTopOf="@+id/ic_about"
            app:layout_constraintBottom_toBottomOf="@+id/ic_about"
            android:textStyle="bold" android:textColor="@color/colorBlack"
            app:layout_constraintStart_toStartOf="@+id/textView15"/>
    <ImageView
            android:src="@drawable/ic_ads_"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="@+id/btn_ads" app:layout_constraintTop_toTopOf="@+id/btn_ads"
            app:layout_constraintStart_toStartOf="@+id/btn_ads"/>
    <TextView
            android:text="Ads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2" android:textColor="@color/colorBlack"
            android:textStyle="bold" app:layout_constraintStart_toStartOf="@+id/textView16"/>


</androidx.constraintlayout.widget.ConstraintLayout>