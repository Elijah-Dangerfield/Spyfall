<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".settings.SettingsFragment" android:id="@+id/frameLayout">

    <TextView
            android:text="Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textColor="@android:color/black"
            android:textStyle="bold" android:textSize="36sp"
            android:layout_marginStart="42dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="42dp">

    </TextView>
    <ImageView
            android:src="@drawable/ic_theme_change"
            android:layout_width="37dp"
            android:layout_height="39dp"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/btn_theme_change"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/btn_theme_change"/>
    <TextView
            android:text="Theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            app:layout_constraintBottom_toBottomOf="@+id/imageView" app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="16dp"
            android:textStyle="bold"/>
    <Button
            android:layout_width="102dp"
            android:layout_height="52dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:id="@+id/btn_theme_change" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintStart_toStartOf="@+id/textView9"
    />


</androidx.constraintlayout.widget.ConstraintLayout>